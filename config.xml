<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget android-versionCode="40415" id="com.raccoonfink.cruisemonkey" ios-CFBundleVersion="40415" version="2017.1.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
  <name>CruiseMonkey</name>
  <description>Keep Track of Your Cruise</description>
  <author email="rangerrick@befunk.com" href="https://github.com/RangerRick/CruiseMonkey">Benjamin Reed</author>
  <content src="index.html"/>
  <allow-navigation href="http://*/*"/>
  <allow-navigation href="gap:*"/>
  <allow-navigation href="https://*/*"/>
  <allow-navigation href="data:*"/>
  <allow-navigation href="cdvfile:*"/>
  <allow-navigation href="http://localhost:8100"/>
