      <key>NSAllowsArbitraryLoads</key>
      <true/>
    </dict>
  </config-file>
  <config-file platform="ios" target="*-Info.plist">
    <key>NSCameraUsageDescription</key>
    <string>Used to take photos to post to Twit-arr.</string>
  </config-file>
  <config-file platform="ios" target="*-Info.plist">
    <key>NSPhotoLibraryUsageDescription</key>
    <string>Used to select photos to post to Twit-arr.</string>
  </config-file>
